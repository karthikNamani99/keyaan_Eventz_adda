<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDFBFB"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dimen_34"
                android:layout_height="@dimen/dimen_34"
                android:background="@drawable/back1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:textStyle="bold"
                android:textColor="#80000000"
                android:textSize="@dimen/dimen_18"
                android:paddingLeft="@dimen/dimen_34"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>




    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_margin="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"
        android:textColorHint="#8000"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:background="@drawable/btn_shape_gradient"
        android:hint="Search Vendor by Name" />



        <TextView
            android:layout_width="wrap_content"
            android:text="Showing 256 Results"
            android:layout_height="@dimen/dimen_24"
            android:backgroundTint="#F5EFEF"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_5"
            android:background="@drawable/btn_shape_gradient"
            android:layout_marginLeft="@dimen/dimen_10"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>